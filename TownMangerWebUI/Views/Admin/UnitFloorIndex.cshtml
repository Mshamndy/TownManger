@model IEnumerable<TownManger.Domain.Entities.Unit>

@{
    ViewBag.Title = "UnitFloorIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Units for Floor @ViewBag.FloorName</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <th class="text-center">Unit ID</th>
                <th class="text-center">Unit Number</th>
                <th class="text-center">Building Name</th>
                <th class="text-center">Family Name</th>

                <th class="text-center">Actions</th>
            </tr>
            @foreach (var unit in Model)
            {
                <tr>
                    <td class="text-center">@unit.UnitID</td>

                    <td class="text-center">@unit.UnitNumber</td>
                    <td class="text-center" style="font-size:larger">@unit.BuildingID</td>
                    <td class="text-center" style="font-size:larger">@unit.FamilyID</td>

                    <td class="text-center">
                        @Html.ActionLink("Edit", "UnitFloorEdit", new{unit.UnitID},
                               new { @class = "btn btn-default" })

                    </td>

                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back", "BuildingManageIndex", null,
        new { @class = "btn btn-default" })
    </div>


</div>