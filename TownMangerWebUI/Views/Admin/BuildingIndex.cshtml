@model IEnumerable <TownManger.Domain.Entities.Building>

@{
    ViewBag.Title = "BuildingIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Buildings</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="text-center">Building ID</th>
                <th class="text-center">Building Name</th>
                <th class="text-center">Floor Numbers</th>
                <th class="text-center">Actions</th>
            </tr>

            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.BuildingID</td>
                        <td class="text-center">@Html.ActionLink(item.BuildingName, "EditBuilding", new { item.BuildingID })</td>
                        <td class="text-center" style="font-size:larger">@Html.ActionLink(item.FloorNumbers.ToString(), "FloorIndex", new { item.BuildingID })</td>
                        <td class="text-center">
                            @using (Html.BeginForm("DeleteBuilding", "Admin"))
                            {
                                @Html.Hidden("buildingID", item.BuildingID)
                                <input type="submit"
                                       class="btn btn-default btn-xs"
                                       value="Delete" />
                            }
                        </td>

                    </tr>
                }
            }




        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back", "Index", null,
        new { @class = "btn btn-default" })
        <span class="pull-right">
            @Html.ActionLink("Add a new Building", "CreateBuilding", null,
                new { @class = "btn btn-success" })
        </span>
    </div>


    </div>