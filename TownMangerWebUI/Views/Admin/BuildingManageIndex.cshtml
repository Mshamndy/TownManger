@model IEnumerable<TownManger.Domain.Entities.Building>

@{
    ViewBag.Title = "BuildingIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Buildings</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <th class="text-center" style="color:#115b86">Building Name</th>
                <th class="text-center" style="color:#115b86">Floor Numbers</th>
                <th class="text-center" style="color:#115b86">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center" style="font-size:larger;font-family:Consolas">@Html.LabelForModel(item.BuildingName)</td>
                    <td class="text-center" style="font-size:larger">@Html.LabelForModel(item.FloorNumbers.ToString())</td>
                    <td class="text-center">
                        @using (Html.BeginForm("BuildingFloorUnit", "Admin"))
                        {
                            @Html.Hidden("buildingID", item.BuildingID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Edit Units" />
                        }
                    </td>

                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back", "BuildingIndex", null,
        new { @class = "btn btn-default" })
       
    </div>


</div>